@model ojualoc.core.Cliente

@{
    ViewBag.Title = "Novo";
}

<h2>Novo</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Cliente</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Nome, new { @class="classe", data_bind = "value: Nome" })
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <div class="editor-label">
            @Html.Label("Sobrenome")
        </div>
        <div class="editor-field">
            @Html.TextBox("Sobrenome", "", new { @class="classe", data_bind = "value: Sobrenome" })
        </div>
        Nome completo: <span data-bind="text: NomeCompleto"></span>
        <p>
            <input type="submit" value="Salvar" data-bind="click: salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para lista", "Inicio")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            var cliente = new App.Models.Cliente();

            window.cliente = cliente;

            ko.applyBindings(cliente);
        });
    </script>
}
